<p id="notice"><%= notice %></p>

<h1>Estoque</h1>

<table>
  <thead>
    <tr>
      <th>SKU</th>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Quantidade</th>
      <th>Preço</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.SKU %></td>
        <td><%= produto.name %></td>
        <td><%= produto.description %></td>
        <td><%= produto.quantity %></td>
        <td><%= produto.price %></td>
        <td><%= link_to 'Detalhes', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Apagar', produto, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar Produto', new_produto_path %>
